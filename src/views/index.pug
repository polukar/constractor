              img(src="./assets/img/companies/company-3.png", alt="")
            .companies__item.swiper-slide
              img(src="./assets/img/companies/company-4.png", alt="")
            .companies__item.swiper-slide
              img(src="./assets/img/companies/company-5.png", alt="")
      .companies__link.--flex.--jcfe
        +linkarrow('View All Companies')
      .companies__line