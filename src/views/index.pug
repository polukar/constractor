          .news__item.parallax.p-4 
            .news__pic 
              img(src="./assets/img/news-3.png", alt="")
            h4.news__name Honorable <br>Mentions
            .news__stats.stats.--flex.--jcsb
              .stats__item 
                .stats__info 7 min read
