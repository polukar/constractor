            +linkarrow('Read Full Article')
      .news__grey-title.grey-title.parallax.p-5.--parrlax-mobile
        span news
      .news__line
  section.companies
    .container 
      h3.companies__title Our Companies
      .companies__list-wrap
        .swiper-container
          .swiper-wrapper
            .companies__item.swiper-slide
              img(src="./assets/img/companies/company-1.png", alt="")
            .companies__item.swiper-slide
              img(src="./assets/img/companies/company-2.png", alt="")
            .companies__item.swiper-slide
              img(src="./assets/img/companies/company-3.png", alt="")
